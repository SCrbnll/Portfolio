---
interface Props {
    href: string
    title: string
    target?: string
    customClass?: string
}

const { href, title, target, customClass } = Astro.props
---

<a  target={target}
    title={title}
    href={href}
    role="link"
    class={`px-4 py-2 rounded-xl transition-colors duration-200 flex items-center justify-start gap-5 ${customClass}`}
    >
    <slot name="before" />
    <slot />     
</a>

