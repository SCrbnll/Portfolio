---
import LinkButton from '../LinkButton.astro';
import TechIcons from './TechIcons.astro';

interface Button {
  text: string;
  href: string;
  icon?: any; 
}


interface Props {
  img?: string;
  title: string;
  description: string;
  badges: string[];
  buttons: Button[];
}

const { img = '', title, description, badges, buttons } = Astro.props;
---
<div class="max-w-sm rounded-xl overflow-hidden shadow-md flex flex-col md:mb-4 lg:mb-1 mx-auto">
  <img src={img} alt={title} class="w-full h-48 object-cover" />

  <div class="p-4 flex flex-col flex-grow scrbnll-project-card">
    <h3 class="text-xl font-semibold mb-2">{title}</h3>
    <p class="mb-4 flex-grow text-wrap">{description}</p>
    <div class="flex flex-wrap gap-2 mb-4">
      {badges.map((badge) => (
        <TechIcons techList={[badge]} />
      ))}
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-2 mt-auto w-full">
      {buttons.map((btn) => (
        <LinkButton href={btn.href} title={btn.text} target='_blank' customClass='scrbnll-button'>
          {btn.icon && <btn.icon slot="before" class="w-4 h-4" />}
          <span>{btn.text}</span>
        </LinkButton>
      ))}
    </div>
  </div>
</div>
