---
import ExperienceCard from './ExperienceCard.astro';

interface ExperienceItem {
  company: string;
  logo: string;
  href: string;
  period: string;
  description: string;
  responsibilities: string[];
  technologies: string[];
}

const { experiences } = Astro.props;
---

<section class="relative">
  <div class="relative">
    <div class="hidden md:block absolute left-1/2 transform -translate-x-1/2 w-1 dark:bg-gray-700 h-full z-0"></div>

    <div class="flex flex-col relative z-10">
      {experiences.map((exp: ExperienceItem, i: number) => (
        <ExperienceCard {...exp} align={i % 2 === 0 ? 'left' : 'right'} />
      ))}
    </div>
  </div>
</section>
