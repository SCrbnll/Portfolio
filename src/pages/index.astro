---
import '../styles/global.css';
import '../styles/animations.css';
import Layout from '../layouts/Layout.astro';
import AboutMe from '../components/Body/AboutMe.astro';
import StatsGrid from '../components/Body/StatsGrid.astro';
import { STATS } from '../constants/stats';
import Portfolio from '../components/Body/Portfolio.astro';
import Contact from '../components/Body/Contact.astro';
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import { layoutTranslations } from '../i18n/components/layout';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang, layoutTranslations);
---

<Layout>
    <AboutMe myself="src/assets/Me.jpg"/>
    <StatsGrid stats={STATS[lang]} />
    <Portfolio title='Portfolio' subtitle={t.portfolioSubtitle} />
    <Contact title={t.contactTitle} subtitle={t.contactSubtitle}/>
</Layout>
